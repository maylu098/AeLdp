programa {
  funcao inicio() {
    //Declaração de variáveis
    real Raio ,Diametro,Comprimento,A

    //Entrada de dados 
    escreva ("Informe o valor do raio")
    leia (Raio)

    //Processamento
    Diametro=2*Raio
    Comprimento=2*3.14*Raio
    A=2*3.14*Raio*Raio

    //Saída de dados 
    escreva("O diametro da circunferencia é",Diametro)
    escreva ("O comprimento da circunferencia é",Comprimento)
    escreva ("A área dessa circunferencia é",A)
  }
}
